{
  "name": "vscode-status-bar-format-toggle",
  "displayName": "Status bar formatting toggle",
  "version": "1.1.2",
  "description": "A VS Code extension that allows you to toggle the formatter on and off with a simple click",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Tom-Bonnike/vscode-status-bar-format-toggle.git"
  },
  "publisher": "tombonnike",
  "author": "Tom Bonnike (bonniketom@gmail.com)",
  "bugs": {
    "url": "https://github.com/Tom-Bonnike/vscode-status-bar-format-toggle/issues"
  },
  "homepage": "https://marketplace.visualstudio.com/items?itemName=tombonnike.vscode-status-bar-format-toggle",
  "engines": {
    "vscode": "^1.19.0"
  },
  "keywords": [
    "disable",
    "toggle",
    "format",
    "prettier",
    "status bar"
  ],
  "categories": [
    "Other",
    "Formatters"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/src/extension",
  "contributes": {
    "commands": [
      {
        "command": "extension.toggleFormat",
        "title": "Toggle formatting"
      }
    ]
  },
  "jest": {
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "testRegex": "spec.ts",
    "moduleFileExtensions": ["ts", "js"]
  },
  "scripts": {
    "postinstall": "node ./node_modules/vscode/bin/install",
    "start": "tsc -watch -p ./",
    "test": "jest",
    "vscode:prepublish": "tsc -p ./"
  },
  "devDependencies": {
    "@types/jest": "^22.1.2",
    "@types/lodash": "^4.14.92",
    "jest": "^22.2.2",
    "ts-jest": "^22.0.3",
    "typescript": "^2.6.2"
  },
  "dependencies": {
    "lodash": "^4.17.4",
    "vscode": "^1.1.10"
  }
}
