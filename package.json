{
  "name": "vscode-status-bar-format-toggle",
  "version": "1.0.0",
  "description": "A VS Code extension that allows you to toggle the formatter on and off with a simple click",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Tom-Bonnike/vscode-status-bar-format-toggle.git"
  },
  "author": "Tom Bonnike (bonniketom@gmail.com)",
  "bugs": {
    "url": "https://github.com/Tom-Bonnike/vscode-status-bar-format-toggle/issues"
  },
  "homepage": "https://github.com/Tom-Bonnike/vscode-status-bar-format-toggle#readme",
  "engines": {
    "vscode": "^1.5.0"
  },
  "activationEvents": [
    "onCommand:extension.toggleFormat"
  ],
  "main": "./out/src/extension",
  "contributes": {
    "commands": [
      {
        "command": "extension.toggleFormat",
        "title": "Toggle formatting"
      }
    ]
  },
  "scripts": {
    "postinstall": "node ./node_modules/vscode/bin/install",
    "compile": "tsc -watch -p ./",
    "vscode:prepublish": "tsc -p ./"
  },
  "devDependencies": {
    "typescript": "^2.6.2",
    "vscode": "^1.1.10"
  }
}
